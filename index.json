{
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "amd": false,
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "tippy": "readonly"
  },
  "plugins": ["prettier"],
  "rules": {
    "curly": ["error", "all"],
    "brace-style": ["error", "1tbs"],
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "no-console": "off",
    "prettier/prettier": "warn",
    "no-control-regex": 0
  }
}
